@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmação de registo";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    Esta aplicação ainda não tem envio de emails<a href="https://aka.ms/aspaccountconf"></a>.
    Normalmente seria enviado um email: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Clique aqui para confirmar a sua conta</a>
</p>
    }
    else
    {
<p>
        Por favor verifique o seu email para confirmar a sua conta.
</p>
    }
}

