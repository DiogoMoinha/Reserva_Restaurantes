@model Reserva_Restaurantes.Models.Pagamento

@{
    ViewData["Title"] = "Apagar Pagamento";
}

<h1>Apagar Pagamento</h1>

<h3>Tem a certeza que quer apagar este pagamento?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Metodo)</dt>
        <dd class="col-sm-10">@Model.Metodo</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Estado)</dt>
        <dd class="col-sm-10">@Model.Estado</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ReservasFK)</dt>
        <dd class="col-sm-10">@Model.Reserva?.Id</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Apagar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
