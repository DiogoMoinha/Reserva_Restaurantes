@model IEnumerable<Reserva_Restaurantes.Models.Mesas>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>PÃ¡gina das Mesas</h1>

<p>
    <a asp-action="Create">Criar nova mesa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumMesa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RestauranteFK)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumMesa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Restaurante.Nome)
            </td>
            <td>
                @if (User.IsInRole("Funcionario") || User.IsInRole("Administrador"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> <span> | </span>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> <span> | </span>
                    <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
