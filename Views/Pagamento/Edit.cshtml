@model Reserva_Restaurantes.Models.Pagamento

@{
    ViewData["Title"] = "Editar Pagamento";
}

<h1>Editar Pagamento</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Metodo" class="control-label"></label>
        <select asp-for="Metodo" class="form-control" asp-items="ViewBag.MetodosPagamento">
            <option value="">-- Selecionar m√©todo --</option>
        </select>
        <span asp-validation-for="Metodo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Estado" class="control-label"></label>
        <select asp-for="Estado" class="form-control" asp-items="ViewBag.EstadosPagamento">
            <option value="">-- Selecionar estado --</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReservasFK" class="control-label"></label>
        <input asp-for="ReservasFK" class="form-control" />
        <span asp-validation-for="ReservasFK" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
